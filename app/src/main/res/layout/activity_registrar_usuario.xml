<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RegistrarUsuario">

    <Button
        android:id="@+id/registroButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/fondo_spinner"
        android:fontFamily="@font/industrial_light"
        android:gravity="bottom|center_horizontal"
        android:padding="10dp"
        android:text="Registrarse"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psswrdRegistroUser" />

    <EditText
        android:id="@+id/psswrdRegistroUser"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/fondo_registros"
        android:ems="10"
        android:fontFamily="@font/industrial_light"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correoUserRegistro" />

    <EditText
        android:id="@+id/correoUserRegistro"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/fondo_registros"
        android:ems="10"
        android:fontFamily="@font/industrial_light"
        android:hint="Correo del usuario"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRegistroLogo" />

    <TextView
        android:id="@+id/textViewRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/favter1"
        android:gravity="center"
        android:text="Registro de\nusuario"
        android:textColor="#CC000180"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewRegistroLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegistro"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/buttonVer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ojo_abierto"
        app:layout_constraintStart_toEndOf="@+id/psswrdRegistroUser"
        app:layout_constraintTop_toBottomOf="@+id/correoUserRegistro" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/industrial_light"
        android:text="La contraseña debe contener min. 6 caracteres."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psswrdRegistroUser" />

    <TextView
        android:id="@+id/iniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/industrial_light"
        android:gravity="center"
        android:text="Si ya tienes cuenta.\n INICIA SESIÓN AQUÍ"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registroButton" />

</androidx.constraintlayout.widget.ConstraintLayout>