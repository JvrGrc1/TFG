<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textViewPosicion"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/industrial_light"
            android:text="1ยบ"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewEquipo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/industrial_light"
            android:text="1 Nacional Maculino"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewPosicion"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTemporada"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/industrial_light"
            android:text="22-23"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewEquipo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewVicEmpDer"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/industrial_light"
            android:text="8/6/8"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewTemporada"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPuntos"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/industrial_light"
            android:text="22 ptos"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>